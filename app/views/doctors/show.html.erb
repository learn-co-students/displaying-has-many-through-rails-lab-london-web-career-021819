<h1>Appointments</h1>
<ul>
  <% @doctor.appointments.each do |appointment| %>
  <h3>Time</h3>
  <li><%= appointment.appointment_datetime.strftime('%B %d, %Y')%></li> at <%= appointment.appointment_datetime.strftime('%H:%M')%>
  <h3>Patient</h3>
  <%= link_to appointment.patient.name, patient_path(appointment.patient) %>
  <% end %>
</ul>
