<h1> <%= @doctor.name %> </h1>
<h3> <%= @doctor.department %> </h3>
<h4>Appointments:</h4>

<% @doctor.appointments.each do |appt| %>

  <ul>
    <li>
      <%= link_to appt.patient.name, patient_path(appt.patient) %>
      <p>Date of the appointment: <%= appt.appointment_datetime.strftime('%B %d, %Y at %H:%M') %> </p>
    </li>
  
  </ul>


<% end %>