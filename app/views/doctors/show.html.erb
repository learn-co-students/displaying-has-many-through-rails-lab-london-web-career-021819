<h1><%= @doctor.name %></h1>

<h3>Department: <%= @doctor.department%></h3>

<h3>Appointments</h3>

<ul>
  <% @appointments.each do |appointment| %>
    <div>
      <li>
        Date and time: <%=  appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M")%>
      </li><br>
      <li>
        Patient: <%= link_to appointment.patient.name, patient_path%>
      </li><br>
    </div>
  <% end %>
</ul>
